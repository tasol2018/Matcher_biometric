<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:orientation="vertical"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_margin="10sp">

     <TextView android:id="@+id/database_list_title"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/database_list_title" 
        android:textColor="#ff0060a0"
        android:textSize="18sp" 
        android:textStyle="bold" />
     <LinearLayout
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:layout_marginBottom="10sp"
        android:gravity="center">
         <TextView android:id="@+id/database_list_size_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:text="@string/database_list_size_text" 
                android:textSize="16sp" 
                android:textColor="#ff0060a0" />
         <TextView android:id="@+id/database_list_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" 
                android:textSize="16sp" 
                android:textColor="#ff000000" />
     </LinearLayout>
     <LinearLayout
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:gravity="center">
	     <Button android:id="@+id/database_list_done"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/database_list_done" 
	            android:textSize="16sp" 
	            android:padding="10sp"
	            style="?android:attr/buttonBarButtonStyle" />
         <Button android:id="@+id/database_list_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/database_list_clear" 
                android:textSize="16sp" 
                android:padding="10sp"
                style="?android:attr/buttonBarButtonStyle" />
	 </LinearLayout>
     <ListView android:id="@android:id/list"
               android:layout_width="match_parent"
               android:layout_height="0dip"
               android:background="#FFFFFF"
               android:layout_weight="1"
               android:drawSelectorOnTop="false"/>
</LinearLayout>
