<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:orientation="vertical"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:background="#ffffffff">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:orientation="horizontal" 
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp">
        <TextView
            android:id="@+id/user_details_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:text="@string/user_details_name_text" 
            android:textColor="#ff0060a0"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="left"/>
        <TextView
            android:id="@+id/user_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" 
            android:textColor="#ff000000"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="right"/>
     </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal"
        android:background="#ffeeeeff">
        <TextView
            android:id="@+id/user_details_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:text="@string/user_details_description_text" 
            android:textColor="#ff0060a0"
            android:textSize="16sp"
            android:gravity="left"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/user_details_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" 
            android:textColor="#ff000000"
            android:textSize="16sp"
            android:gravity="right"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal"> 
        <TextView
            android:id="@+id/user_details_create_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:text="@string/user_details_create_date_text" 
            android:textColor="#ff0060a0"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="left"/>
        <TextView
            android:id="@+id/user_details_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" 
            android:textColor="#ff000000"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="right"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal"
        android:background="#ffeeeeff">
        <TextView
            android:id="@+id/user_details_modify_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:text="@string/user_details_modify_date_text" 
            android:textColor="#ff0060a0"
            android:textSize="16sp"
            android:gravity="left"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/user_details_modify_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" 
            android:textColor="#ff000000"
            android:textSize="16sp"
            android:gravity="right"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/user_details_match_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:text="@string/user_details_match_score_text" 
            android:textColor="#ff0060a0"
            android:textSize="16sp"
            android:gravity="left"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/user_details_match_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" 
            android:textColor="#ff000000"
            android:textSize="16sp"
            android:gravity="right"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
