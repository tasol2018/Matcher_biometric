<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_weight="1"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/client_logo_new"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etUserName"
            android:textColor="@color/accent"
            android:hint="@string/connect_login_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etUserPassword"
            android:password="true"
            android:textColor="@color/accent"
            android:hint="@string/connect_login_user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/accent"
                android:textSize="@dimen/_15sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Survayor Type"
                android:layout_weight="40"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/spnProviderType"
                android:layout_weight="60"
                android:layout_width="0dp"
                android:layout_height="wrap_content"></Spinner>

        </LinearLayout>
        <Button
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/btnLogin"
            android:textColor="@color/white"
            android:text="@string/connect_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
